{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DodoHosted 插件信息",
  "type": "object",
  "properties": {
    "identifier": {
      "type": "string",
      "description": "插件标识符"
    },
    "api_version": {
      "type": "integer",
      "description": "插件适配 API 版本"
    },
    "name": {
      "type": "string",
      "description": "插件名称"
    },
    "version": {
      "type": "string",
      "description": "版本"
    },
    "description": {
      "type": "string",
      "description": "简介"
    },
    "author": {
      "type": "string",
      "description": "作者"
    },
    "entry_assembly": {
      "type": "string",
      "description": "入口 Assembly 文件，不含文件扩展名"
    }
  },
  "required": [
    "identifier",
    "api_version",
    "name",
    "version",
    "description",
    "author",
    "entry_assembly"
  ]
}
